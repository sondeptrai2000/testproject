<!DOCTYPE html>
<html>

<head>
    <script src="/jquery/jquery.js"></script>
    <link rel="stylesheet" href="/css/admin/menu.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />
    <link rel="stylesheet" href="/css/teacher/teacherHome.css">
    <title>Home Teacher</title>
</head>

<body>

    <div class="updateProfileOut" style="display:none">
        <div class="updateProfile">
            <div>
                <h2>Update profile</h2>
                <img id='currentAvatar' style='max-width:auto;max-height:auto'></img>
                <input type='hidden' id='avatarOldProfile'></input>
            </div>
            <div style="text-align: left;">
                <input type='hidden' id='idProfileUpdate'>

                <input type='file' id='myFile'>
                Name:<input id='usernameUpdate'></input>
                Password:<input id='newPassWord' placeholder="Input New password if you wanna change"></input>
                Gender: <select id='genderUpdate'>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    <option value="other">Other</option>
                </select>
                Email:<input id='emailUpdate'></input>
                Phone:<input id='phoneUpdate'></input>
                BirthDay:<input type="date" id='birthdayUpdate'></input>
                Address:<input id='addressUpdate'></input>
            </div> <button onclick="doUpdateProfile()">Update</button>

        </div>
    </div>
    <header> {{> teacherHeader }}</header>
    <div class="content">
        <div id="teacherProfile">
            <div id="teacherProfileContent">
                <img id='avatarProfile' src="">
                <p id='idProfile' style="display:none"></p>
                <p id='usernameProfile'></p>
                <p id='genderProfile'></p>
                <p id='emailProfile'></p>
                <p id='phoneProfile'></p>
                <p id='birthdayProfile'></p>
                <p id='addressProfile'></p>
                <button onclick="updateProfile()">Update</button>
            </div>
        </div>
        <div id="Schedual">
            <div id="SchedualContent">
                <h2 style="margin:5px;">Weekly Schedual</h2>
                <label>Chose week: </label><select id='chonTuan' onchange="tuanoi()"></select>
                <div class="tr" id='ngay'></div>
                <div class="tr" id='thu'>
                    <div class="td">Day of week</div>
                    <div class="td">Monday</div>
                    <div class="td">Tuesday</div>
                    <div class="td">Wednesday</div>
                    <div class="td">Thursday</div>
                    <div class="td">Friday</div>
                    <div class="td">Saturday</div>
                    <div class="td">Sunday</div>
                </div>
                <div class="tr" id="time1"></div>
                <div class="tr" id="time2"></div>
                <div class="tr" id="time3"></div>
                <div class="tr" id="time4"></div>
                <div class="tr" id="time5"></div>
            </div>
        </div>
    </div>
</body>

<script src="/js/teacher/teacherHome.js"></script>

</html>